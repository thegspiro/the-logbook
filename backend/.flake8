[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    alembic/versions,
    .pytest_cache,
    venv,
    .venv
ignore =
    # E501: line too long (handled by max-line-length)
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E203: whitespace before ':' (conflicts with black)
    E203
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py:F401
